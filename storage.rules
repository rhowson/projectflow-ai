// Firebase Storage Security Rules for ProjectFlow AI
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User profile images - users can upload their own profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Profile images are publicly readable
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
    }
    
    // Project documents and files
    match /projects/{projectId}/documents/{fileName} {
      allow read, write: if request.auth != null && (
        // Check if user has access to the project
        firestore.get(/databases/(default)/documents/projects/$(projectId)).data.ownerId == request.auth.uid ||
        request.auth.uid in firestore.get(/databases/(default)/documents/projects/$(projectId)).data.teamMemberIds
      ) && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Team shared files
    match /teams/{teamId}/shared/{fileName} {
      allow read, write: if request.auth != null && (
        // Check if user is a team member
        firestore.get(/databases/(default)/documents/teams/$(teamId)).data.ownerId == request.auth.uid ||
        request.auth.uid in firestore.get(/databases/(default)/documents/teams/$(teamId)).data.get('members', []).map(m => m.userId)
      ) && request.resource.size < 100 * 1024 * 1024; // 100MB limit
    }
    
    // Task attachments
    match /projects/{projectId}/tasks/{taskId}/attachments/{fileName} {
      allow read, write: if request.auth != null && (
        // Check if user has access to the project
        firestore.get(/databases/(default)/documents/projects/$(projectId)).data.ownerId == request.auth.uid ||
        request.auth.uid in firestore.get(/databases/(default)/documents/projects/$(projectId)).data.teamMemberIds
      ) && request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Temporary uploads (auto-delete after 24 hours)
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // System files (admin only)
    match /system/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}